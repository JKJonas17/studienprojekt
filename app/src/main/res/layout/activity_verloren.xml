<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Verloren">

    <TextView
        android:id="@+id/tv_verloren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_verloren"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        app:fontFamily="@font/geschwungen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_nochmalQuiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="@string/bt_verloren"
        android:textColor="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <ImageView
        android:id="@+id/iv_klabautermann"
        android:layout_width="205dp"
        android:layout_height="181dp"
        android:layout_marginBottom="38dp"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verloren"
        app:layout_constraintVertical_bias="0.135"
        app:srcCompat="@drawable/fliegenderhollaender" />

    <TextView
        android:id="@+id/tv_avgLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avarage"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_nochmalQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_klabautermann" />

</androidx.constraintlayout.widget.ConstraintLayout>