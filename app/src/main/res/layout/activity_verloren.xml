<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Verloren">

    <TextView
        android:id="@+id/tv_verloren"
        android:layout_width="400dp"
        android:layout_height="288dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="@string/tv_verloren"
        android:textColor="@android:color/background_dark"
        android:textSize="45sp"
        app:fontFamily="@font/geschwungen"
        app:layout_constraintBottom_toTopOf="@+id/iv_klabautermann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_nochmalQuiz"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/roundbutton"
        android:text="@string/bt_verloren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_klabautermann"
        app:layout_constraintVertical_bias="0.481" />

    <ImageView
        android:id="@+id/iv_klabautermann"
        android:layout_width="361dp"
        android:layout_height="308dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="38dp"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toTopOf="@+id/bt_nochmalQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fliegenderhollaender" />

</androidx.constraintlayout.widget.ConstraintLayout>