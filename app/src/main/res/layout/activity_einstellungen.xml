<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Einstellungen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="42dp"
        android:contentDescription="desc"
        app:layout_constraintBottom_toTopOf="@+id/tv_schatz_des_hollaenders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_schatzkiste"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/muenze" />

    <ImageButton
        android:id="@+id/ib_back_einstellungen"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginEnd="43dp"
        android:background="@null"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_backbutton_foreground"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tv_einstellungen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/headline_Einstellungen"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        app:fontFamily="@font/geschwungen"
        app:layout_constraintBottom_toTopOf="@+id/iv_schatztruhe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_schatztruhe"
        android:layout_width="95dp"
        android:layout_height="102dp"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toTopOf="@+id/ll_Einstellungen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/schatz3" />


    <LinearLayout
        android:id="@+id/ll_Einstellungen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_schatztruhe">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:gravity="center_vertical"
            android:text="@string/tv_aktueller_username" />

        <Button
            android:id="@+id/bt_name_aendern"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_namen_aendern" />

        <Button
            android:id="@+id/bt_kaptain_kontaktieren"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_kaptn_kontaktieren" />

        <Button
            android:id="@+id/bt_crew"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_crew" />

        <Button
            android:id="@+id/bt_fortschritt_zuruecksetzten"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_fortschritt_zuruecksetzten" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:text="Score: "
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/iv_schatztruhe"
        app:layout_constraintTop_toBottomOf="@+id/tv_einstellungen" />

</androidx.constraintlayout.widget.ConstraintLayout>