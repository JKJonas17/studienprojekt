<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Main_menue">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_score"
        app:srcCompat="@drawable/muenze" />

    <ImageView
        android:id="@+id/iv_schatztruhe"
        android:layout_width="113dp"
        android:layout_height="108dp"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toTopOf="@+id/tv_willkommen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/schatz3" />


    <TextView
        android:id="@+id/tv_willkommen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="@string/tv_willkommen"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        app:fontFamily="@font/geschwungen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_Menue"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_Menue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_willkommen">

        <Button
            android:id="@+id/bt_leinen_los"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_leinen_los" />

        <Button
            android:id="@+id/bt_einstellungen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_einstellungen" />

        <Button
            android:id="@+id/bt_statistik"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="22dp"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_statistik" />

        <Button
            android:id="@+id/bt_beenden"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="90dp"
            android:textColor="@color/colorBackground"
            android:background="@drawable/roundbutton"
            android:text="@string/bt_beenden" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_schatztruhe"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toEndOf="@+id/iv_schatztruhe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

</androidx.constraintlayout.widget.ConstraintLayout>